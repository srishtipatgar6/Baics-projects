#include <stdio.h>
#include <stdbool.h>

// Initial Sudoku puzzle (0 means empty)
int puzzle[9][9] = {
    {3, 0, 6, 5, 0, 8, 4, 0, 0},
    {5, 2, 0, 0, 0, 0, 0, 0, 0},
    {0, 8, 7, 0, 0, 0, 0, 3, 1},
    {0, 0, 3, 0, 0, 0, 0, 6, 8},
    {9, 0, 0, 8, 6, 3, 0, 0, 5},
    {0, 5, 0, 0, 9, 0, 6, 0, 0},
    {1, 3, 0, 0, 0, 0, 2, 5, 0},
    {0, 0, 0, 0, 0, 0, 0, 7, 4},
    {0, 0, 5, 2, 0, 6, 3, 0, 0}
};

// Print Sudoku grid
void printPuzzle(int puzzle[9][9]) {
    printf("\n+-------+-------+-------+\n");
    for (int r = 0; r < 9; r++) {
        printf("| ");
        for (int c = 0; c < 9; c++) {
            if (puzzle[r][c] == 0)
                printf("_ ");   // Empty cell
            else
                printf("%d ", puzzle[r][c]);

            if ((c + 1) % 3 == 0) printf("| ");
        }
        printf("\n");
        if ((r + 1) % 3 == 0)
            printf("+-------+-------+-------+\n");
    }
}

// Check if placing num is valid
bool validMove(int puzzle[9][9], int row, int col, int num) {
    // Row
    for (int x = 0; x < 9; x++)
        if (puzzle[row][x] == num) return false;

    // Column
    for (int x = 0; x < 9; x++)
        if (puzzle[x][col] == num) return false;

    // 3x3 subgrid
    int startRow = row - row % 3;
    int startCol = col - col % 3;
    for (int r = 0; r < 3; r++)
        for (int c = 0; c < 3; c++)
            if (puzzle[startRow + r][startCol + c] == num)
                return false;

    return true;
}

// Solve Sudoku using backtracking
bool solveSudoku(int puzzle[9][9]) {
    for (int row = 0; row < 9; row++) {
        for (int col = 0; col < 9; col++) {
            if (puzzle[row][col] == 0) { // Empty cell
                for (int num = 1; num <= 9; num++) {
                    if (validMove(puzzle, row, col, num)) {
                        puzzle[row][col] = num;

                        if (solveSudoku(puzzle))
                            return true;

                        puzzle[row][col] = 0; // Undo (backtrack)
                    }
                }
                return false;
            }
        }
    }
    return true;
}

int main() {
    printf("Initial Puzzle:\n");
    printPuzzle(puzzle);

    if (solveSudoku(puzzle)) {
        printf("\nSolved Puzzle:\n");
        printPuzzle(puzzle);
    } else {
        printf("\nNo solution exists!\n");
    }

    return 0;
}
